CC = gcc
SRC = main.c school.c
NAME = school
RM =rm -f
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: m.h

m.h:
	@test -f m.h || false

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@
