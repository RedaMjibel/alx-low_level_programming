CC = gcc
SRC = main.c school.c
NAME = school
ifneq (1, $(words $(NAME) $(filter $(NAME), $(.VARIABLES))))
    $(error The 'NAME' variable must be used only once in the Makefile and set to 'school')
endif
RM =rm -f
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: m.h

m.h:
	@test -f m.h || false

.IGNORE: clean oclean fclean re
