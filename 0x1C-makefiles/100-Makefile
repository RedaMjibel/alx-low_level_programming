CC = gcc
SRC = main.c school.c
NAME = school
RM =rm -f
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME):$(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

$(OBJ): m.h

.PHONY: m.h
	@test -f m.h || (echo "m.h is missing"; false)
