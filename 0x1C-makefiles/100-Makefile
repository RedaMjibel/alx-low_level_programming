CC = gcc
SRC = main.c school.c
NAME = school
RM =rm -f
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic

ifeq (,$(filter-out $(SRC),$(SRC)))
    $(error Each source file must be used only once in the Makefile)
endif

OBJ = $(patsubst %.c, %.o, $(SRC))

.PHONY: all clean oclean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: m.h

m.h:
	@test -f m.h || false

.IGNORE: clean oclean fclean re
